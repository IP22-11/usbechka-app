<Window x:Class="usbechka_app.pages.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Width="400" Height="200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="#FF303030" CornerRadius="10" Padding="10">
        <Grid>
            <TextBlock Text="Внимание" 
                       Foreground="White" 
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <Border Background="#FF363636" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="20,0"
                    VerticalAlignment="Center">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
                    <TextBlock x:Name="MessageText" 
                               Foreground="White" 
                               FontSize="14" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>
                </ScrollViewer>
            </Border>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom">
                <Button Style="{StaticResource DialogButton}" 
                        Content="OK" 
                        Width="80" 
                        Margin="0,0,10,0"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>