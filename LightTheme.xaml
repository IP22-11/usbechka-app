<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета для светлой темы -->
    <Color x:Key="PrimaryBackgroundColor">#FFFFFFFF</Color>
    <!-- Белый фон -->
    <Color x:Key="SecondaryBackgroundColor">#FFF0F0F0</Color>
    <!-- Светло-серый фон -->
    <Color x:Key="AccentColor">#FF007ACC</Color>
    <!-- Акцентный цвет -->
    <Color x:Key="TextColor">#FF000000</Color>
    <!-- Черный текст -->
    <Color x:Key="PlaceholderTextColor">#FF808080</Color>
    <!-- Серый текст для заполнителей -->

    <!-- Кисти для светлой темы -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="PlaceholderTextBrush" Color="{StaticResource PlaceholderTextColor}"/>

</ResourceDictionary>